{
    "files": ["src/index.ts"],
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2015",
        "noImplicitAny": true,
        "removeComments": false,
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "pretty": true,
        "strictNullChecks": true,
        "declaration": true,
        "declarationDir": "dist",
        "declarationMap": true,
        "lib": ["ES2015"],
        "noEmitOnError": true,
        "moduleResolution": "node",
        "types": ["node"]
    }
}
